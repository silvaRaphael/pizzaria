// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Task {
  id        Int     @id @default(autoincrement())
  title     String
  completed Boolean @default(false)
}

model City {
  id       String   @id
  state_id String
  city     String
  Client   Client[]
}

model State {
  id     String   @id
  state  String
  abbr   String
  Client Client[]
}

model User {
  id         String    @id
  username   String
  name       String
  password   String
  active     Boolean
  created_at DateTime
  updated_at DateTime?
}

model Client {
  id             String    @id
  name           String
  phone          String
  zip_code       String
  street_address String
  street_number  String
  reference      String?
  state          State     @relation(fields: [state_id], references: [id])
  state_id       String
  city           City      @relation(fields: [city_id], references: [id])
  city_id        String
  active         Boolean
  created_at     DateTime
  updated_at     DateTime?
}
