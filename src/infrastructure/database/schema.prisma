// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Task {
  id        Int     @id @default(autoincrement())
  title     String
  completed Boolean @default(false)
}

model City {
  id       String   @id
  state_id String
  city     String
  Client   Client[]
}

model State {
  id     String   @id
  state  String
  abbr   String
  Client Client[]
}

model User {
  id               String    @id
  username         String
  name             String
  password         String
  active           Boolean
  token            String?
  token_expiration DateTime?
  created_at       DateTime
  updated_at       DateTime?
}

model Client {
  id             String    @id
  name           String
  phone          String
  zip_code       String
  street_address String
  street_number  String
  reference      String?
  state_id       String
  city_id        String
  active         Boolean
  created_at     DateTime
  updated_at     DateTime?
  state          State     @relation(fields: [state_id], references: [id])
  city           City      @relation(fields: [city_id], references: [id])
  Order          Order[]
}

model PizzaFlavor {
  id               String             @id
  flavor           String
  price            Float
  active           Boolean
  created_at       DateTime
  updated_at       DateTime?
  OrderPizzaFlavor OrderPizzaFlavor[]
}

model PizzaTopping {
  id                String              @id
  topping           String
  price             Float
  active            Boolean
  created_at        DateTime
  updated_at        DateTime?
  OrderPizzaTopping OrderPizzaTopping[]
}

model Order {
  id                String              @id
  client_id         String
  size              Int
  price             Float
  status            Int
  done              Boolean
  created_at        DateTime
  updated_at        DateTime?
  client            Client              @relation(fields: [client_id], references: [id])
  OrderPizzaFlavor  OrderPizzaFlavor[]
  OrderPizzaTopping OrderPizzaTopping[]
}

model OrderPizzaFlavor {
  id        String      @id
  order_id  String
  flavor_id String
  flavor    PizzaFlavor @relation(fields: [flavor_id], references: [id])
  order     Order       @relation(fields: [order_id], references: [id])
}

model OrderPizzaTopping {
  id         String       @id
  order_id   String
  topping_id String
  topping    PizzaTopping @relation(fields: [topping_id], references: [id])
  order      Order        @relation(fields: [order_id], references: [id])
}
